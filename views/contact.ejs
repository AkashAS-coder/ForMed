<% layout('layout', { title: 'Contact', active: 'contact' }) %>
<section class="contact">
  <div class="container">
    <h2>Contact Us</h2>
    <div class="contact-content">
      <div class="contact-info">
        <div class="contact-item"><i class="fas fa-envelope"></i><p>info@healthcarecareers.com</p></div>
        <div class="contact-item"><i class="fas fa-phone"></i><p>+1 (555) 123-4567</p></div>
        <div class="contact-item"><i class="fas fa-map-marker-alt"></i><p>123 Medical Center Dr, Healthcare City, HC 12345</p></div>
      </div>
      <form class="contact-form">
        <input type="text" placeholder="Your Name" required>
        <input type="email" placeholder="Your Email" required>
        <textarea placeholder="Your Message" rows="5" required></textarea>
        <button type="submit" class="btn btn-primary">Send Message</button>
      </form>
    </div>
  </div>
</section> 
<% layout('layout', { title: member.name + ' - Team', active: 'team' }) %>
<section class="team-profile">
  <div class="container" style="max-width: 600px; margin: 0 auto;">
    <a href="/team" style="display:inline-block;margin-bottom:1.5rem;color:#2563eb;text-decoration:underline;">&larr; Back to Team</a>
    <div class="team-profile-card" style="background:white;padding:2.5rem 2rem;border-radius:14px;box-shadow:0 4px 16px rgba(0,0,0,0.08);text-align:center;">
      <img src="<%= member.photo %>" alt="<%= member.name %>" class="team-member-photo" style="width:120px;height:120px;object-fit:cover;border-radius:50%;border:3px solid #2563eb;margin-bottom:1.2rem;" />
      <h2 style="color:#2563eb;margin-bottom:0.5rem;"><%= member.name %></h2>
      <h4 style="color:#64748b;margin-bottom:1.2rem;"> <%= member.role %> </h4>
      <p style="color:#475569;font-size:1.08rem;line-height:1.7;"> <%= member.bio %> </p>
    </div>
  </div>
</section> 